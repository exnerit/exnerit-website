---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Proaktiver Managed Service Provider f√ºr den gehobenen Mittelstand. IT-Infrastruktur auf Enterprise-Niveau." } = Astro.props;
---

<!doctype html>
<html lang="de" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow, noarchive" />
    <meta name="googlebot" content="noindex, nofollow, noarchive" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
      
      :root {
        --color-brand-dark: #241E1D;
        --color-accent: #fcac00;
        --color-text: #FFFFFF;
        --color-text-muted: #E5E7EB;
      }
      
      body {
        font-family: 'Inter', system-ui, sans-serif;
      }
      
      .glow-accent {
        box-shadow: 0 0 20px rgba(252, 172, 0, 0.15);
      }
      
      .glow-accent-hover:hover {
        box-shadow: 0 0 30px rgba(252, 172, 0, 0.25);
      }
    </style>
  </head>
  <body class="bg-[#241E1D] text-white antialiased">
    <slot />
  </body>
</html>
